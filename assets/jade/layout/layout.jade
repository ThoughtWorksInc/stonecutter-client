include ../mixins/_helpers
include ../mixins/_view_helpers

- var bodyClass = ""
- var pageTitle = "Stonecutter client"
- var pageTitleDataL8n = "content:default/title"
- oAuthURL = oAuthURL || "http://thoughtworksinc.github.io/stonecutter"
block vars

doctype
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    title(data-l8n="#{pageTitleDataL8n}") #{pageTitle}
    meta(name="viewport", content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1, user-scalable=no")
    meta(name="format-detection", content="telephone=no")
    link(rel="icon" type="image/png" href="favicon.png")
    block headerMeta

    +stylesheetLinkTag("application","screen")
    link(href='http://fonts.googleapis.com/css?family=Roboto+Condensed:400,300,700', rel='stylesheet', type='text/css')

    block headerScripts

  body(class="#{bodyClass}")
    .header(role="banner")
      a.header__logo(href="./")
        span.visuallyhidden Greenparty
    .main-content(role="main")
      block content
    script.
      document.addEventListener("touchstart", function(){}, true);
    block footerScripts
